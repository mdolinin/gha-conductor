{
  "name": "gha-conductor",
  "version": "1.17.0",
  "private": true,
  "description": "Github Actions for monorepo setup",
  "author": "mdolinin",
  "license": "ISC",
  "homepage": "https://github.com//",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "start": "tsc && probot run ./lib/index.js",
    "bot:start": "node ./lib/main.js",
    "test": "jest",
    "generate": "node scripts/generate.js",
    "db:migrate": "dotenv -- cross-var pg-migrations apply --directory migrations --database %DATABASE_URL%",
    "db:generate": "dotenv -- cross-var npx @databases/pg-schema-cli --database %DATABASE_URL% --directory ./src/__generated__",
    "simulate": "node_modules/.bin/probot receive -e pull_request -p test/fixtures/pull_request.labeled.json ./lib/index.js"
  },
  "dependencies": {
    "@databases/pg": "^5.5.0",
    "@databases/pg-schema-cli": "^4.4.0",
    "@databases/pg-typed": "^4.4.1",
    "ajv": "^8.17.1",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^14.1.0",
    "probot": "^13.3.6",
    "simple-git": "^3.25.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.11",
    "@types/pino-std-serializers": "^4.0.0",
    "@types/readable-stream": "^4.0.15",
    "cross-var": "^1.1.0",
    "jest": "^29.0.0",
    "nock": "^14.0.0-beta.8",
    "semantic-release": "^24.0.0",
    "smee-client": "^2.0.2",
    "ts-jest": "^29.2.3",
    "tsc-hooks": "^1.1.2",
    "typescript": "^5.5.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ],
          "message": "build(release): compiled action for ${nextRelease.version}\n\n[skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "engines": {
    "node": ">= 18"
  }
}
